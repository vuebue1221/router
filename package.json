{
  "name": "@vue/router-root",
  "private": true,
  "packageManager": "pnpm@7.1.7",
  "engines": {
    "node": ">=16.5.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release": "node scripts/release.mjs",
    "size": "pnpm run -r size",
    "build": "pnpm run -r build",
    "docs:build": "pnpm run -r docs:build --filter ./packages/docs",
    "play": "pnpm run -r play",
    "build:size": "pnpm run -r build:size",
    "lint": "prettier -c --parser typescript \"packages/*/{src,__tests__,e2e}/**/*.[jt]s?(x)\"",
    "lint:fix": "pnpm run lint --write",
    "test": "pnpm run -r test"
  },
  "devDependencies": {
    "chalk": "^4.1.0",
    "lint-staged": "^13.0.0",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "@types/react",
        "react-dom"
      ]
    }
  }
}
